<header>
  <nav class="navbar">
    <div class="header-left-nav">
      <%= link_to image_tag("1_Primary_logo_on_transparent_280x67.png", alt: "サイトロゴ", class: "site_logo"), root_path, class: "site_logo_link"%>
      <div class="header-sharch d-lg-inline-block d-none">
        <i class="fas fa-map-marker-alt"></i>
      </div>
    </div>
    <div class="header-right-nav">
      <% if user_signed_in? %>
        <div class="nav-item nav-name d-sm-inline-block d-none">
          <%= current_user.username %> 様
        </div>
        <div class="nav-item">
          <label for="toggle" class="label">
            <div class="icon-box">
              <% if current_user.avatar.url %>
                <%= image_tag current_user.avatar.url, class: "icon-image icon-header" %>
              <% else %>
                <%= image_tag "/assets/default.png", class: "icon-image icon-header" %>
              <% end %>
            </div>
          </label>
          <input type="checkbox" id="toggle" />
          <ul class="header-nav-menu">
            <li><%= link_to "商品一覧", "" %></li>
            <li><%= link_to "購入履歴", "" %></li>
            <li><%= link_to "食品を出品する", "" %></li>
            <li><%= link_to "設定", current_user %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      <% else %>
        <%= link_to "会員登録（無料）", new_user_registration_path, class: "btn btn-first btn-appearance" %>
        <%=link_to "ログイン", new_user_session_path, class: "btn btn-second btn-appearance" %>
      <% end %>
    </div>
  </div>
</nav>
</header>
