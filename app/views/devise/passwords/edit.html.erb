<div class="container device">
  <div class="device_frame">
    <p class="my-4">パスワードの再設定を行います</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.password_field :password, autofocus: true, autocomplete: "新しいパスワード",placeholder: "新しいパスワード", class: "form-control col-10 px-2" %>
        </div>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.password_field :password_confirmation, autocomplete: "新しいパスワード",placeholder: "新しいパスワード", class: "form-control col-10 px-2" %>
        </div>
        <div class="actions">
          <%= f.submit "新しいパスワードを送信", class:"form-control btn-warning my-4"%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
