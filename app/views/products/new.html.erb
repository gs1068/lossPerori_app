<div class="product">
  <div class="row">
    <div class="user-nav">
      <ul>
        <li class=""><%= link_to "アカウント情報", current_user %></li>
        <li class=""><%= link_to "プロフィール変更", edit_user_path(current_user) %></li>
        <li class="active"><%= link_to "食品を出品する", new_product_path %></li>
        <li class=""><%= link_to "出品中の商品一覧", edit_user_path(current_user) %></li>
        <li class=""><%= link_to "注文履歴", edit_user_path(current_user) %></li>
      </ul>
    </div>
    <div class="product-profile-container">
      <div class="product-view">
        <div class="user-view-box">
          <div class="update-content">
            <div class="row">
              <h5>食品の出品</h5>
            </div>
          </div>
          <%= form_with model: @product, local: true do |f| %>
            <%= render 'shared/error_messages', object: f.object%>
            <div class="update-content">
              <div class="row">
                <%= f.label :product_name, class: "col-md-2 product-label"%>
                <div class="required-b pt-2"></div>
                <%= f.text_field :product_name, class: 'form-control md-4 col-md-9', placeholder:"商品名を入力" %>
              </div>
            </div>
            <div class="update-content">
              <div class="row">
                <%= f.label :product_intro, class: "col-md-2 product-label" %>
                <div class="required-b pt-2"></div>
                <%= f.text_area :product_intro, class: 'form-control md-4 col-md-9', placeholder:"商品説明を入力" %>
              </div>
            </div>
            <div class="update-content">
              <div class="row">
                <%= f.label :raw_material, class: "col-md-2 product-label"%>
                <div class="required-b pt-2"></div>
                <%= f.text_area :raw_material, class: 'form-control md-4 col-md-9', placeholder:"原材料を入力" %>
              </div>
            </div>
            <div class="update-content">
              <div class="row">
                <%= f.label :fee, class: "col-md-2 product-label"%>
                <div class="required-b pt-2"></div>
                <%= f.number_field :fee, class: 'form-control md-4 col-md-9', placeholder:"金額を入力"%>
              </div>
            </div>
            <div class="update-content">
              <div class="row">
                <%= f.label :expiration_date, class: "col-md-2 product-label"%>
                <div class="required-b pt-2"></div>
                <%= f.date_field :expiration_date, class: 'form-control md-4 col-md-9' %>
              </div>
            </div>
            <div class="update-content">
              <div class="row">
                <%= f.label :total_weight, class: "col-md-2 product-label"%>
                <div class="required-b pt-2"></div>
                <%= f.number_field :total_weight, class: 'form-control md-4 col-md-9', placeholder:"総重量をkgで入力", step: "0.001" %>
              </div>
            </div>
            <div class="update-content">
              <div class="row">
                <%= f.label :product_avatars, class: "col-md-2 product-label" %>
                <div class="required-b"></div>
                <%= f.file_field :product_avatars, multiple: true, class:"md-4 col-md-9", id:"user-image" %>
              </div>
            </div>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <div class="update-content">
              <div class="row">
                <%= f.submit "出品確認ページ", class: "btn-block btn btn-warning product-btn" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
