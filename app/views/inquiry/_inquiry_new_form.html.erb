<%= form_for inquiry, :url => inquiry_confirm_path do |f| %>
  <%= render 'shared/error_messages', object: f.object%>
  <div class="update-content">
    <div class="row">
      <label for="name" class="col-md-3 inquiry-label">名前</label>
      <%= f.text_field :name, class:"form-control col-md-9", placeholder:"名前"%>
    </div>
  </div>
  <div class="update-content">
    <div class="row">
      <label for="email" class="col-md-3 inquiry-label">Email</label>
      <%= f.text_field :email, class:"form-control col-md-9", placeholder:"メールアドレス"%>
    </div>
  </div>
  <div class="update-content">
    <div class="row">
      <label for="email" class="col-md-3 inquiry-label">お問い合わせ内容</label>
      <%= f.text_area :message, class: 'form-control col-md-9 inquiry_text', placeholder:"お問い合わせ内容" %>
    </div>
  </div>
  <div class="update-content">
    <div class="row">
      <%= f.submit '確認', class: "btn-block btn btn-warning inquiry-btn" %>
    </div>
  </div>
<% end %>
