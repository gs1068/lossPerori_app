<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row top-main-container">
        <div class="top-catch-fream">
          <div class="top-catch-area">
            <h1>食品ロスのゼロを目指す。</h1>
            <div class="header-right-nav">
              <% if user_signed_in? %>
                <div class="header-sharch">
                  <%= form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |f| %>
                    <%= f.text_field :free_word, placeholder: "キーワード検索", class: "form-control" %>
                    <%= f.submit '探す', class: "search-btn" %>
                  <% end %>
                  <i class="fas fa-map-marker-alt"></i>
                </div>
              <% else %>
                <%= link_to "会員登録", new_user_registration_path, class: "btn btn-first btn-appearance" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="new_information">
    <p>新着情報</p>
    <div class="row">
      <%= render 'home_product_content', products: @products %>
    </div>
  </div>
</div>
