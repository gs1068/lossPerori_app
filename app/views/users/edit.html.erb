<div class="container-fiuld user">
  <div class="row">
    <div class="user-nav">
      <ul>
        <li class=""><%= link_to "アカウント情報", current_user %></li>
        <li class="active"><%= link_to "プロフィール変更", edit_user_path(current_user) %></li>
        <li class=""><%= link_to "お気に入りカテゴリー", edit_user_path(current_user) %></li>
        <li class=""><%= link_to "注文履歴", edit_user_path(current_user) %></li>
      </ul>
    </div>
    <div class="user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        </div>
        <%= form_with(model: @user, local: true) do |f| %>
          <%= render 'shared/error_messages', object: f.object%>
          <div class="update-content">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <% if current_user.avatar.url %>
                    <%= image_tag current_user.avatar.url, class: "icon-image host-icon" %>
                  <% else %>
                    <%= image_tag "/assets/default.png", class: "icon-image host-icon" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :avatar, class: "col-md-3 required-a" %>
              <%= f.file_field :avatar, class:"md-4 col-md-9", placeholder:"アイコン画像をアップロード", id:"user-image" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :username, class: "col-md-3 require-a"%>
              <%= f.text_field :username, class: 'form-control md-4 col-md-9' %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :intro, class: "col-md-3 require-a" %>
              <%= f.text_area :intro, class: 'form-control md-4 col-md-9 user-intro' %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :postcode, class: "col-md-3 require-a" %>
              <%= f.text_field :postcode, autocomplete: 'postcode', class: 'form-control md-4 col-md-9', id: "user_postcode" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :prefecture_code, class: "col-md-3 require-a" %>
              <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control md-4 col-md-9', id: 'user_prefecture_code' %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :address_city, class: "col-md-3 require-a" %>
              <%= f.text_field :address_city, autocomplete: 'address_city',class: 'form-control md-4 col-md-9', id: "user_address_city" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :address_street, class: "col-md-3 require-a" %>
              <%= f.text_field :address_street, autocomplete: 'address_street', class: 'form-control md-4 col-md-9', id: "user_address_street" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :address_building, class: "col-md-3 require-a" %>
              <%= f.text_field :address_building, autocomplete: 'address_building', class: 'form-control md-4 col-md-9' %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.submit "更新", class: "btn-block btn btn-warning show-btn" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>
